<div id="wrap" class="basic-container">
    <div class="img-container">
        <img id="site-img" src="{{site.img}}" alt="{{site.name}}">
        <div class="img-caption">
            {{site.town}}
        </div>
    </div>
    <div class="row">
        <div class="content-wrap col col-12 col-lg-8">
            <article class="site-content">
                <div class="site-content-inner">
                    <div class="site-visits-count">
                        <span class="visits">
                            <i class="fa fa-user visits-icon" aria-hidden="true"></i>
                            {{site.numberOfVisits}}
                        </span>
                    </div>
                    <div class="site-heading">
                        <h2>{{site.name}}</h2>
                    </div>
                    <div class="site-region">
                        Област {{site.region}}
                    </div>
                    <div class="site-description">
                        {{{site.description}}}
                    </div>
                    {{#if isLoggedIn}} {{!--
                    <div class="site-btn-wrap">
                        {{#if isSiteVisited}}
                        <button type="button" id="checkSite" class="btn site-btn reverse">Отмаркирай</button>
                        {{else}}
                        <button type="button" id="checkSite" class="btn site-btn">Маркирай като посетено</button>
                        {{/if}}
                    </div> --}}
                    <div class="upload-photo-wrap">
                            <input type="file" name="input-visit-document" id="input-visit-document" class="inputfile" accept=".png, .jpg, .jpeg">
                            <label for="input-visit-document">
                                <div class="circle">
                                    <i class="fa fa-upload" aria-hidden="true"></i>
                                </div>
                                <span></span>
                            </label>
                            <button type="submit" id="visit-site-btn" class="btn basic-btn">Заявете като посетено</button>
                    </div>
                    {{/if}}
                    <div class="site-comments-count">
                        <span class="comments">{{site.commentsCount}} {{#if isSingleComment}}коментар{{else}}коментара{{/if}}</span>
                    </div>
                </div>
            </article>
            {{#if isLoggedIn}}
            <div class="write-comment">
                <div class="write-comment-inner">
                    <div class="write-comment-header">
                        <h3>Напишете коментар:</h3>
                    </div>
                    <div class="textarea-wrap">
                        <textarea id="comment" cols="45" rows="6" maxlength="65525" aria-required="true" required="required"></textarea>
                    </div>
                    <div class="post-commment-wrap">
                        <button type="button" id="post-comment" class="btn basic-btn">Публикувай</button>
                    </div>
                </div>
            </div>
            {{/if}}
            <div id="comments">
                {{#each site.commentsPages}}
                <div id="comment-page-{{number}}" class="comment-page {{#unless defaultPage}}hidden{{/unless}}">
                    <ul class="comment-page-list">
                        {{#each comments}}
                        <li class="comment-item">
                            <div class="comment-wrap">
                                <div class="row">
                                    <div class="user-img-wrap col col-4 col-sm-2">
                                        <div class="circle">
                                            <a href="#/profiles/{{username}}">
                                                <img id="user-img" src="{{userProfileImg}}" alt="{{username}}">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="comment-content col col-8 col-sm-10">
                                        <div class="comment-content-inner">
                                            <div class="username">
                                                <a href="#/profiles/{{username}}">{{username}}</a>
                                            </div>
                                            <div class="date">
                                                В {{date}}
                                            </div>
                                            <div class="content">
                                                {{content}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
            </div>
            <div class="pagination-wrap">
                <ul id="pagination"></ul>
            </div>
        </div>
        <aside id="ads" class="col col-12 col-lg-4">
            <div class="main-ad-box">
