<div id="wrap" class="basic-container">
    <div id="featured-flexslider" class="flexslider">
        <ul class="slides">
            {{#each topSites}}
            <li>
                <div class="featured-flexslider-img">
                    <a href="/api/sites/{{_id}}" title="{{name}}">
                        <img src="{{imgUrl}}" alt="{{name}}" height="200" width="300">
                    </a>
                    <div class="img-caption">
                        {{town}}
                    </div>
                </div>

                <div class="text-caption">
                    <div class="description-container">
                        <h2><a href="/api/sites/{{_id}}" title="{{name}}" rel="bookmark">{{name}}</a></h2>
                        {{{description}}}
                    </div>
                    <div class="slider-meta">
                        <span class="slider-readmore" title="Прочети повече"></span>
                        <div class="visits">
                            <i class="fa fa-user visits-icon" aria-hidden="true"></i>
                            <strong>{{numberOfVisits}}</strong>
                        </div>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <section id="sites-carousel-section">
        <div id="sites-carousel-inner" class="basic-container">
            <div id="carousel-wrap">
                <ul id="sites-carousel" class="slides">
                    {{#each popularSites}}
                    <li class="sites-carousel-item">
                        <a href="/api/sites/{{_id}}" title="{{name}}" class="posts-carousel-item">
                            <img src="{{imgUrl}}" alt="{{name}}">
                            <i class="overlay-plus"></i>
                        </a>
                        <div class="sites-carousel-article">
                            <h2>
                                <a href="/api/sites/{{_id}}">{{name}}<span> - {{town}}</span></a>
                            </h2>
                            <p>{{description}}</p>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </section>
    <div id="main-content">
        <div class="basic-container">
            <div class="row">
                <section id="news" class="col col-12 col-lg-8">
                    <h2 id="news-header">Последни новини</h2>
                    <ul id="news-list">
                        {{#each news}}
                        <li class="news-item">
                            <div class="news-item-wrap">
                                <h2>{{heading}}</h2>
                                <div class="news-item-info">
                                    <span class="date">{{date}}</span> |
                                    <span class="comments">{{commentsLength}} comments</span>
                                </div>
                                <div class="news-item-content">
                                    {{{content}}}
                                    <a href="/api/news/{{_id}}" title="Прочети повече" class="readmore">Прочети повече</a>
                                </div>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </section>
                <aside id="ads" class="col col-12 col-lg-4">
                    <div class="main-ad-box">
                        <a href="#" title="Място за вашата реклама">
                            <img src="https://www.goabroad.com/images/reviews/fcm16-76-10-1481305282.jpg" alt="your ad here">
                            <i class="overlay-plus"></i>
                        </a>
                        <div class="main-ad-content">
                            <h2>Вашата реклама</h2>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Enim dignissimos hic minima, error ut fugiat aperiam veniam consequuntur
                            ex at voluptatibus, adipisci deserunt. Delectus tempore non, magni ab, doloremque eveniet.
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</div>